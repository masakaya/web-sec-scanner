<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Scan Report - {{ site }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        @media print {
            .no-print { display: none !important; }
            .page-break-avoid { page-break-inside: avoid; }
            body { print-color-adjust: exact; -webkit-print-color-adjust: exact; }

            .accordion-content {
                max-height: none !important;
                opacity: 1 !important;
                display: block !important;
                padding-top: 1rem !important;
                padding-bottom: 1rem !important;
            }

            .accordion-btn {
                pointer-events: none;
            }

            .accordion-icon {
                display: none !important;
            }
        }

        .break-anywhere {
            overflow-wrap: anywhere;
            word-break: break-word;
        }

        .accordion-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out, padding 0.3s ease;
            opacity: 0;
        }

        .accordion-content.open {
            max-height: 50000px;
            opacity: 1;
            transition: max-height 0.5s ease-in, opacity 0.3s ease-in;
        }

        .accordion-icon {
            transition: transform 0.3s ease;
        }

        .accordion-btn.active .accordion-icon {
            transform: rotate(180deg);
        }
    </style>
</head>
<body class="text-gray-800 antialiased pb-20">

    <!-- Print Button -->
    <div class="no-print fixed bottom-6 right-6 z-50">
        <button onclick="window.print()" class="bg-slate-800 hover:bg-slate-900 text-white font-bold p-4 rounded-full shadow-xl transition duration-300 flex items-center justify-center w-14 h-14 border border-slate-600">
            <i class="fas fa-print text-xl"></i>
        </button>
    </div>

    <!-- Expand All Button -->
    <div class="no-print fixed bottom-24 right-6 z-50">
        <button onclick="toggleAllAccordions()" id="expand-all-btn" class="bg-blue-600 hover:bg-blue-700 text-white font-bold p-4 rounded-full shadow-xl transition duration-300 flex items-center justify-center w-14 h-14 border border-blue-500">
            <i class="fas fa-expand-alt text-xl"></i>
        </button>
    </div>

    <div class="max-w-5xl mx-auto bg-white min-h-screen shadow-lg print:shadow-none flex flex-col w-full">

        <!-- Header -->
        <header class="bg-slate-900 text-white p-5 print:p-6">
            <div class="flex items-center gap-3 border-b border-slate-700 pb-4 mb-2">
                <div class="bg-blue-600 p-2.5 rounded-lg shrink-0 shadow-lg shadow-blue-900/50">
                    <i class="fas fa-shield-halved text-2xl text-white"></i>
                </div>
                <div>
                    <h1 class="text-lg md:text-xl font-bold">Security Report</h1>
                    <p class="text-xs text-slate-400">Vulnerability Scan</p>
                </div>
            </div>
        </header>

        <main class="p-4 md:p-8 print:p-6 flex-grow w-full box-border">

            <!-- Basic Info Card -->
            <section class="mb-6 page-break-avoid">
                <div class="bg-slate-50 border border-slate-200 rounded-lg p-4 flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div class="flex-1 min-w-0">
                        <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Target Domain</p>
                        <div class="font-mono text-sm md:text-base font-bold text-slate-800 break-all flex items-center gap-2">
                            <i class="fas fa-globe text-slate-400"></i>
                            <span>{{ site }}</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-6 md:border-l md:border-slate-200 md:pl-6">
                        <div>
                            <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Scan Date</p>
                            <div class="font-bold text-slate-800">{{ date }}</div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Dashboard -->
            <section class="mb-8 page-break-avoid">
                <h2 class="text-lg font-bold text-slate-700 border-b-2 border-slate-100 pb-2 mb-4 flex items-center gap-2">
                    <i class="fas fa-chart-pie text-blue-600"></i> エグゼクティブサマリ
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Grade -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 flex flex-col items-center justify-center shadow-sm min-h-[280px]">
                        <h3 class="text-gray-400 text-sm font-bold uppercase tracking-widest mb-4">総合評価</h3>
                        {% set high_count = summary | selectattr('risk', 'equalto', 'High') | list | length %}
                        {% set medium_count = summary | selectattr('risk', 'equalto', 'Medium') | list | length %}
                        {% if high_count > 0 %}
                        <div class="relative z-10 text-center flex flex-col items-center justify-center h-36 w-36 rounded-full border-[12px] mb-3 bg-red-100 border-red-500 transition-all">
                            <span class="text-6xl font-bold text-red-500">F</span>
                        </div>
                        {% elif medium_count > 3 %}
                        <div class="relative z-10 text-center flex flex-col items-center justify-center h-36 w-36 rounded-full border-[12px] mb-3 bg-orange-100 border-orange-500 transition-all">
                            <span class="text-6xl font-bold text-orange-500">C</span>
                        </div>
                        {% elif medium_count > 0 %}
                        <div class="relative z-10 text-center flex flex-col items-center justify-center h-36 w-36 rounded-full border-[12px] mb-3 bg-yellow-100 border-yellow-500 transition-all">
                            <span class="text-6xl font-bold text-yellow-600">B</span>
                        </div>
                        {% else %}
                        <div class="relative z-10 text-center flex flex-col items-center justify-center h-36 w-36 rounded-full border-[12px] mb-3 bg-green-100 border-green-500 transition-all">
                            <span class="text-6xl font-bold text-green-500">A</span>
                        </div>
                        {% endif %}
                        <p class="text-sm text-gray-500 text-center mt-2">セキュリティスコア</p>
                    </div>

                    <!-- Severity Chart -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm min-h-[280px] flex flex-col items-center justify-center">
                        <h3 class="text-gray-400 text-sm font-bold uppercase tracking-widest mb-4">重要度分布</h3>
                        <div class="w-48 h-48">
                            <canvas id="severityChart"></canvas>
                        </div>
                    </div>

                    <!-- Stats -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm min-h-[280px] flex flex-col">
                        <h3 class="text-gray-400 text-sm font-bold uppercase tracking-widest mb-4">統計情報</h3>
                        <div class="flex-1 flex flex-col justify-center space-y-4">
                            {% set high_count = summary | selectattr('risk', 'equalto', 'High') | list | length %}
                            {% set medium_count = summary | selectattr('risk', 'equalto', 'Medium') | list | length %}
                            {% set low_count = summary | selectattr('risk', 'equalto', 'Low') | list | length %}
                            {% set info_count = summary | selectattr('risk', 'equalto', 'Informational') | list | length %}
                            <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg border border-red-100">
                                <span class="text-sm font-bold text-red-600">High</span>
                                <span class="text-2xl font-bold text-red-600">{{ high_count }}</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-orange-50 rounded-lg border border-orange-100">
                                <span class="text-sm font-bold text-orange-600">Medium</span>
                                <span class="text-2xl font-bold text-orange-600">{{ medium_count }}</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg border border-yellow-100">
                                <span class="text-sm font-bold text-yellow-600">Low</span>
                                <span class="text-2xl font-bold text-yellow-600">{{ low_count }}</span>
                            </div>
                            <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg border border-slate-100">
                                <span class="text-sm font-bold text-slate-600">Info</span>
                                <span class="text-2xl font-bold text-slate-600">{{ info_count }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Alert Summary -->
            <section class="mb-8 page-break-avoid">
                <h2 class="text-lg font-bold text-slate-700 border-b-2 border-slate-100 pb-2 mb-4 flex items-center gap-2">
                    <i class="fas fa-clipboard-list text-blue-600"></i> アラートサマリ
                </h2>
                <div class="bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm">
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead class="bg-slate-50 border-b border-slate-200">
                                <tr>
                                    <th class="text-left p-3 font-bold text-slate-600 text-xs uppercase tracking-wider">リスク</th>
                                    <th class="text-left p-3 font-bold text-slate-600 text-xs uppercase tracking-wider">アラート名</th>
                                    <th class="text-center p-3 font-bold text-slate-600 text-xs uppercase tracking-wider">検出数</th>
                                    <th class="text-center p-3 font-bold text-slate-600 text-xs uppercase tracking-wider">影響URL</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                {% for item in summary %}
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="p-3">
                                        {% if item.risk == 'High' %}
                                        <span class="px-2 py-1 rounded text-xs font-bold uppercase text-white bg-red-500">High</span>
                                        {% elif item.risk == 'Medium' %}
                                        <span class="px-2 py-1 rounded text-xs font-bold uppercase text-white bg-orange-500">Medium</span>
                                        {% elif item.risk == 'Low' %}
                                        <span class="px-2 py-1 rounded text-xs font-bold uppercase text-white bg-yellow-500">Low</span>
                                        {% else %}
                                        <span class="px-2 py-1 rounded text-xs font-bold uppercase text-white bg-slate-400">Info</span>
                                        {% endif %}
                                    </td>
                                    <td class="p-3 font-medium">
                                        <a href="#alert-{{ loop.index0 }}" class="text-blue-600 hover:text-blue-800 hover:underline transition-colors">
                                            {{ item.name }}
                                        </a>
                                    </td>
                                    <td class="p-3 text-center font-bold {% if item.count > 1 %}text-red-600{% else %}text-gray-600{% endif %}">{{ item.count }}</td>
                                    <td class="p-3 text-center text-gray-600">{{ item.urls }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- Vulnerability Details -->
            <section class="mb-8">
                <h2 class="text-lg font-bold text-slate-700 border-b-2 border-slate-100 pb-2 mb-4 flex items-center gap-2">
                    <i class="fas fa-bug text-blue-600"></i> 脆弱性詳細
                </h2>

                <div class="space-y-3">
                    {% for alert in alerts %}
                    <div id="alert-{{ loop.index0 }}" class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden page-break-avoid mb-3">
                        <button onclick="toggleAccordion({{ loop.index0 }})" class="accordion-btn w-full flex items-center justify-between p-3 {% if alert.risk == 'High' %}bg-red-50 border-b border-red-200{% elif alert.risk == 'Medium' %}bg-orange-50 border-b border-orange-200{% elif alert.risk == 'Low' %}bg-yellow-50 border-b border-yellow-200{% else %}bg-slate-50 border-b border-slate-200{% endif %} transition-colors hover:opacity-90 text-left focus:outline-none">
                            <div class="flex items-center gap-3 overflow-hidden">
                                {% if alert.risk == 'High' %}
                                <span class="px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider shrink-0 text-white bg-red-500">H</span>
                                {% elif alert.risk == 'Medium' %}
                                <span class="px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider shrink-0 text-white bg-orange-500">M</span>
                                {% elif alert.risk == 'Low' %}
                                <span class="px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider shrink-0 text-white bg-yellow-500">L</span>
                                {% else %}
                                <span class="px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider shrink-0 text-white bg-slate-400">I</span>
                                {% endif %}
                                <h3 class="font-bold text-sm text-gray-800 leading-tight truncate pr-2">
                                    {{ alert.name }}
                                </h3>
                            </div>
                            <div class="shrink-0 pl-2">
                                <i id="icon-{{ loop.index0 }}" class="accordion-icon fas fa-chevron-down text-gray-400 text-xs"></i>
                            </div>
                        </button>
                        <div id="content-{{ loop.index0 }}" class="accordion-content bg-white px-4">
                            <div class="text-xs space-y-4 py-4">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div class="space-y-1">
                                        <div class="font-bold text-gray-400 text-[10px] uppercase">Description</div>
                                        <p class="text-gray-700 leading-relaxed">{{ alert.description | e }}</p>
                                    </div>
                                    <div class="space-y-1">
                                        <div class="font-bold text-green-600 text-[10px] uppercase flex items-center gap-1">
                                            <i class="fas fa-check-circle"></i> Solution
                                        </div>
                                        <div class="bg-green-50 p-3 rounded border border-green-100 text-gray-700 leading-relaxed">
                                            {{ alert.solution | e }}
                                        </div>
                                    </div>
                                </div>
                                {% if alert.reference_urls %}
                                <div class="pt-2 border-t border-gray-100">
                                    <div class="font-bold text-gray-400 text-[10px] uppercase mb-1">参考情報</div>
                                    <div class="space-y-1">
                                        {% for ref_url in alert.reference_urls %}
                                        <a href="{{ ref_url }}" target="_blank" class="text-blue-400 hover:text-blue-600 text-[10px] break-anywhere flex items-center gap-1">
                                            <i class="fas fa-external-link-alt"></i> {{ ref_url }}
                                        </a>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}

                                <!-- URL Instances -->
                                <div class="pt-3 border-t border-gray-200">
                                    <div class="font-bold text-gray-400 text-[10px] uppercase mb-3">検出箇所 ({{ alert.instances|length }}件)</div>
                                    <div class="space-y-3">
                                        {% for inst in alert.instances %}
                                        <div class="bg-slate-50 p-3 rounded border border-slate-200 space-y-2">
                                            <div class="space-y-1">
                                                <div class="font-bold text-gray-500 text-[10px] uppercase">URL</div>
                                                <div class="font-mono text-[10px] bg-white p-2 rounded border border-slate-300 text-slate-600 break-anywhere select-all leading-tight">
                                                    {{ inst.url }}
                                                </div>
                                            </div>
                                            {%- if inst.method and inst.attack %}
                                            <div class="space-y-1">
                                                <div class="font-bold text-gray-500 text-[10px] uppercase">攻撃内容</div>
                                                <div class="font-mono text-[10px] bg-white p-2 rounded border border-slate-300 text-slate-600 break-anywhere">
                                                    <span class="font-semibold">{{ inst.method | e }}</span>
                                                    <div class="mt-1 pt-1 border-t border-slate-200">{{ inst.attack | e }}</div>
                                                </div>
                                            </div>
                                            {%- endif %}
                                            {%- if inst.param %}
                                            <div class="space-y-1">
                                                <div class="font-bold text-gray-500 text-[10px] uppercase">パラメータ</div>
                                                <div class="font-mono text-[10px] bg-white p-2 rounded border border-slate-300 text-slate-600 break-anywhere">{{ inst.param | e }}</div>
                                            </div>
                                            {%- endif %}
                                            {%- if inst.evidence %}
                                            <div class="space-y-1">
                                                <div class="font-bold text-gray-500 text-[10px] uppercase">エビデンス</div>
                                                <div class="font-mono text-[10px] bg-white p-2 rounded border border-slate-300 text-slate-600 break-anywhere">{{ inst.evidence | e }}</div>
                                            </div>
                                            {%- endif %}
                                            {%- if inst.otherinfo %}
                                            <div class="space-y-1">
                                                <div class="font-bold text-gray-500 text-[10px] uppercase">その他情報</div>
                                                <div class="font-mono text-[10px] bg-white p-2 rounded border border-slate-300 text-slate-600 break-anywhere leading-relaxed">{{ inst.otherinfo | e }}</div>
                                            </div>
                                            {%- endif %}
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </section>

        </main>
    </div>

    <script>
        // Accordion functionality
        function toggleAccordion(id) {
            const content = document.getElementById(`content-${id}`);
            const icon = document.getElementById(`icon-${id}`);

            if (!content) {
                console.error(`Content element with id 'content-${id}' not found`);
                return;
            }

            const btn = content.previousElementSibling;

            content.classList.toggle('open');
            if (btn) {
                btn.classList.toggle('active');
            }
        }

        // Toggle all accordions
        let allExpanded = false;
        function toggleAllAccordions() {
            const contents = document.querySelectorAll('.accordion-content');
            const btns = document.querySelectorAll('.accordion-btn');
            const expandBtn = document.getElementById('expand-all-btn');

            allExpanded = !allExpanded;

            contents.forEach(content => {
                if (allExpanded) {
                    content.classList.add('open');
                } else {
                    content.classList.remove('open');
                }
            });

            btns.forEach(btn => {
                if (allExpanded) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });

            // Update button icon
            if (allExpanded) {
                expandBtn.innerHTML = '<i class="fas fa-compress-alt text-xl"></i>';
            } else {
                expandBtn.innerHTML = '<i class="fas fa-expand-alt text-xl"></i>';
            }
        }

        // Render severity chart
        {% set high_count = summary | selectattr('risk', 'equalto', 'High') | list | length %}
        {% set medium_count = summary | selectattr('risk', 'equalto', 'Medium') | list | length %}
        {% set low_count = summary | selectattr('risk', 'equalto', 'Low') | list | length %}
        {% set info_count = summary | selectattr('risk', 'equalto', 'Informational') | list | length %}

        const ctx = document.getElementById('severityChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['High', 'Medium', 'Low', 'Info'],
                datasets: [{
                    data: [{{ high_count }}, {{ medium_count }}, {{ low_count }}, {{ info_count }}],
                    backgroundColor: ['#ef4444', '#f97316', '#eab308', '#cbd5e1'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 10,
                            padding: 10,
                            font: { size: 10 }
                        }
                    }
                },
                cutout: '60%'
            }
        });
    </script>
</body>
</html>
